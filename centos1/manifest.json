{
  "name": "CentOS test1",
  "version": "0.1.0",
  "manifest_version": 2,

  "description": "CentOS test1",

  "icons": {
    "16": "image/icon16.png",
    "64": "image/icon64.png",
    "128": "image/icon128.png"
  },

  "permissions": [
    "https://lists.centos.org/pipermail/centos-announce/*"
  ],

  "background": {
    "scripts": ["common.js", "background.js"]
  },

  "browser_action": {
    "default_icon": {
      "19": "image/icon19.png",
      "38": "image/icon38.png"
    },
    "default_title": "CentOS 1",
    "default_popup": "popup.html"
  }
}
